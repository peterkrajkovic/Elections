<Window x:Class="Elections.AddParty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elections"
        mc:Ignorable="d"
        Title="Add" Height="250" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Text="Number of votes" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" BorderThickness="0" IsReadOnly="True"/>
        <TextBox Name="number" Text="" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  Margin="10" />
        <TextBox Name="party" Text="" Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  Margin="10" />
        <TextBox Name="textBox"  Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" BorderThickness="0" IsReadOnly="True"/>
        <Button  Content="OK" Width="80" Grid.Row="2"  Height="30" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="Ok" />
    </Grid>
</Window>
